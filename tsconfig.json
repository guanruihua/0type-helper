{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,  
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [ "./src/**/*" , "__test__"  ],
  "exclude": [
    "./src/test",
    "*.spec.ts"
  ]
}